<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/search.css">
        <title>Next Episode</title>
    </head>

    <body>
        {{#if recommendedShows}}
        {{#each recommendedShows}}
        <h5>Because you liked <b>{{parent_name}}</b>:</h5>
        <main id="mymain">
            {{#each shows}}
            <div class="show">
                <img src="{{image.medium}}" alt="{{name}}" />
                <div class="show-info">
                    <h3>{{name}}</h3>
                    <span>{{rating.average}}</span>
                </div>
                <div class='buttons'>
                    <form id="myform" method="post" action="/shows">
                        <input type="hidden" id="id" name="id" value="{{id}}">
                        <input type="hidden" id="name" name="name" value="{{name}}">
                        <input type="hidden" id="image" name="image" value="{{image.medium}}">
                        <input type="hidden" id="rating" name="rating" value="{{rating.average}}">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-heart"></i>
                        </button>
                    </form>
                    <form action="/shows/{{id}}" method="GET" id="get-info">
                        <button type="submit" class="btn blue">
                            <i class="fas fa-info-circle"></i>
                        </button>
                    </form>
                </div>
            </div>
            {{/each}}
        </main>
        <hr />
        {{/each}}
        {{else}}
        <p>You have not liked any shows.</p>
        {{/if}}
    </body>

</html>